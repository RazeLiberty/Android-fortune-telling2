<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/textview01_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
       	/>

    <Button
        android:id="@+id/button01_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:text="運勢" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview01_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/bba_1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button01_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="わっ、わっ、わたしは占いババ!!\nキュートなキュートな占いババ!!\n占いたいことは何かしら〜？"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>
