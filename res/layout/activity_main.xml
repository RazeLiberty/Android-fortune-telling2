<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/textview01_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
       	/>

    <ImageView
        android:id="@+id/bba1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview01_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/bba_1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bba1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="わっ、わっ、わたしは占いババ!!\nキュートなキュートな占いババ!!\n占いたいことは何かしら〜？"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fortuneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pastFortuneButton"
        android:layout_alignRight="@+id/pastFortuneButton"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="14dp"
        android:text="運勢" />

    <Button
        android:id="@+id/pastFortuneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fortuneButton"
        android:layout_centerHorizontal="true"
        android:text="過去の運勢" />

</RelativeLayout>
